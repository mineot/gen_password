{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@errors/*": ["./src/core/errors/*"],
      "@enums/*": ["./src/core/enums/*"],
      "@validators/*": ["./src/core/validators/*"],
      "@fatures/*": ["./src/fatures/*"]
    }
  }
}
